mixin guest-reviews()
  section.guest-reviews.container
    +section-header(guestReviewsHeader)
    ul.guest-reviews__reviews-list
      each column in guestReviewsData
        li.guest-reviews__reviews-column
          ul.guest-reviews__column-list
            each review in column
              li.guest-reviews__review
                .guest-reviews__review-header
                  .guest-reviews__review-img
                    +picture(review.image.path, review.image.name, review.image.format, review.image.width, review.image.height, review.image.altText)
                  .guest-reviews__review-info
                    p.guest-reviews__review-name= review.name
                    .guest-reviews__review-cite
                      +icon(review.companyLogo.name, review.companyLogo.width, review.companyLogo.height)
                p.guest-reviews__review-comment!= review.comment
